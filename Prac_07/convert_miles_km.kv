BoxLayout:
   orientation: 'vertical'
   BoxLayout:
      orientation: 'horizontal'
      TextInput:
         id: input_mile
         text: '13'
         font_size: 48
         on_text: app.handle_calc()
      BoxLayout:
         orientation: 'vertical'
         size_hint_x: 0.25
         Button:
            text: 'Up'
            on_press: app.handle_increment(1)
         Button:
            text: 'Down'
            on_press: app.handle_increment(-1)
   Button:
      text: 'Convert Miles to K.M'
      on_press: app.handle_calc()
   Label:
      id: output_label
      font_size: 40
      text: '25'
      color: (212/255, 114/255, 174/255, 1)

